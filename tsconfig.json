{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "ES2022",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./lib",
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "incremental": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*"],
}
